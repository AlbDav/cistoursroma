<!DOCTYPE html>
<html>
	<head>
		<title>C.I.S Tours</title>
		<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet"> 
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
		<script src="/javascripts/slideshow.js"></script>
		<script>
			var slides = [];
			$(function(){
				/*$.ajax({url: "/home_content?num=3", success: function(res){
					$("#row1").prepend(res);
					slide1 = new slideShow($("#row1 .slide"), $("#row1 .intermed"));
				}});
				$.ajax({url: "/home_content?num=3", success: function(res){
					$("#row2").prepend(res);
					slide2 = new slideShow($("#row2 .slide"), $("#row2 .intermed"));
				}});*/
				var ajaxUrlPart = "/home_content?num=3";
				if($(window).width() < 1024){
					ajaxUrlPart = "/home_content?num=2";
				}
				if($(window).width() < 640){
					ajaxUrlPart = "/home_content?num=1";
				}
				for(var i = 0; i < 3; i++){
					var ajaxUrl = ajaxUrlPart + "&cat=" + (i+1);
					var res = $.ajax({async: false, url: ajaxUrl});
					var elem = "#row" + (i+1);
					$(elem).prepend(res.responseText);
					slides[i] = new slideShow($(elem + " .slide"), $(elem + " .intermed"));

				}
			});
		</script>
	</head>
	<body>
		<nav>
			<img src="/icons/icon.jpg">
			<section id="buttons">
				<button>Home</button>
				<button>Categories</button>
				<button>Contact Us</button>
			</section>
		</nav>
		<main>
			<div class="parallax" style="background-image: url('/images/vaticano_macro.jpg')"></div>
			<div class="row" id="row1">
				<div class="slide">
					<div class="table">
						<div class="no_prod">
							<button class="butt">Altri tour</button>
						</div>
					</div>
				</div>
				<div class="slide_buttons">
					<a href="javascript:slides[0].previousSlide()" class="material_icon">arrow_back_ios</a>
					<a href="javascript:slides[0].showSlide(0)" class="material_icon intermed">radio_button_checked</a>
					<a href="javascript:slides[0].showSlide(1)" class="material_icon intermed">radio_button_unchecked</a>
					<a href="javascript:slides[0].showSlide(2)" class="material_icon intermed">radio_button_unchecked</a>
					<a href="javascript:slides[0].showSlide(3)" class="material_icon intermed">radio_button_unchecked</a>
					<a href="javascript:slides[0].nextSlide()" class="material_icon">arrow_forward_ios</a>
				</div>
			</div>
			<div class="parallax" style="background-image: url('/images/colosseo_macro.jpg')"></div>
			<div class="row" id="row2">
				<div class="slide">
					<div class="table">
						<div class="no_prod">
							<button class="butt">Altri tour</button>
						</div>
					</div>
				</div>
				<div class="slide_buttons">
					<a href="javascript:slides[1].previousSlide()" class="material_icon">arrow_back_ios</a>
					<a href="javascript:slides[1].showSlide(0)" class="material_icon intermed">radio_button_checked</a>
					<a href="javascript:slides[1].showSlide(1)" class="material_icon intermed">radio_button_unchecked</a>
					<a href="javascript:slides[1].showSlide(2)" class="material_icon intermed">radio_button_unchecked</a>
					<a href="javascript:slides[1].showSlide(3)" class="material_icon intermed">radio_button_unchecked</a>
					<a href="javascript:slides[1].nextSlide()" class="material_icon">arrow_forward_ios</a>
				</div>
			</div>
			<div class="parallax" style="background-image: url('/images/rome_tour_macro.jpg')"></div>
			<div class="row" id="row3">
				<div class="slide">
					<div class="table">
						<div class="no_prod">
							<button class="butt">Altri tour</button>
						</div>
					</div>
				</div>
				<div class="slide_buttons">
					<a href="javascript:slides[2].previousSlide()" class="material_icon">arrow_back_ios</a>
					<a href="javascript:slides[2].showSlide(0)" class="material_icon intermed">radio_button_checked</a>
					<a href="javascript:slides[2].showSlide(1)" class="material_icon intermed">radio_button_unchecked</a>
					<a href="javascript:slides[2].showSlide(2)" class="material_icon intermed">radio_button_unchecked</a>
					<a href="javascript:slides[2].showSlide(3)" class="material_icon intermed">radio_button_unchecked</a>
					<a href="javascript:slides[2].nextSlide()" class="material_icon">arrow_forward_ios</a>
				</div>
			</div>
			<div class="parallax" style="background-image: url('/images/rome_tour_macro.jpg')"></div>
		</main>
	</body>
</html>
