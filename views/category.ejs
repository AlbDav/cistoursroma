<!DOCTYPE html>
<html>
	<head>
		<title>C.I.S Tours</title>
		<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet"> 
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
		<link rel="stylesheet" href="/stylesheets/category.css" type="text/css">
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
	</head>
	<body>
		<nav>
			<img src="/icons/icon.jpg">
			<section id="buttons">
				<button>Home</button>
				<button>Categories</button>
				<button>Contact Us</button>
			</section>
		</nav>
		<main>
			<div class="parallax" style="background-image: url('<%= category.img %>')"></div>
			<div id="cont">
				<div id="name"><%= category.name %></div>
				<% for(i = 0; i < Math.ceil((products.length)/3); i++){ %>
					<div class="row">
						<% for(j = (i*3); j < (i*3)+3; j++){ %>
		       					<div class="prod">
								<div class="img" style="background-image: url('<%= products[j].img %>')"></div>
								<div class="title"><%= products[j].title %></div>
								<div class="price"><%= products[j].price %></div>
								<button class="butt" onClick="location.href='/product/<%= products[j].product_id %>'">Read More</button>
							</div>
						<% } %>
					</div>
				<% } %>
			</div>
		</main>
	</body>
</html>
