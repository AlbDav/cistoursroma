<!DOCTYPE html>
<html>
	<head>
		<title>C.I.S Tours</title>
		<link rel="icon" href="/icons/favicon.ico">
		<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet"> 
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
		<link rel="stylesheet" href="/stylesheets/category.css" type="text/css">
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
	</head>
	<body>
		<nav>
			<% include nav %>
		</nav>
		<main>
			<div class="parallax" style="background-image: url('/images/fontana-176931_1920.jpg')"></div>
			<div id="cont">
				<div id="name">All Categories</div>
					<div id="table">
					<% for(i = 0; i < Math.ceil((categories.length)/3); i++){ %>
						<div class="row">
							<% for(j = (i*3); j < (i*3)+3 && j < categories.length; j++){ %>
		       						<div class="prod">
									<div class="img" style="background-image: url('<%= categories[j].img %>')"></div>
									<div class="title"><%= categories[j].name %></div>
									<button class="butt" onClick="location.href='/category/<%= categories[j].category_id %>'">Read More</button>
								</div>
							<% } %>
						</div>
					<% } %>
					</div>
			</div>
			<footer>
				<% include footer %>
			</footer>
		</main>
	</body>
</html>
